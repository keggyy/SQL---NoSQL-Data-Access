
@model SQL.NoSQL.WEB.Models.LogListModel
@{
    ViewBag.Title = "MixedAccess";
}

<h2>Accesso Database Misto</h2>

<br />

@using (Html.BeginForm("SQLAccess", "Home", FormMethod.Get))
{


    <p>
        Application:
        @Html.DropDownListFor(m => m.SelectedApp, new SelectList(Model.App,
                               "Id", "Name",
                               new { @class = "form-control" }))
        Search: @Html.TextBox("TextToSearch", Model.TextToSearch)
        <input type="submit" value="Search" class="btn btn-default" />
    </p>
}

<br />

<style>
    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: rgba(136,70,70,0.18);
    }
</style>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Livello
            </th>
            <th>
                Data
            </th>
            <th>
                Applicazione
            </th>
            <th>
                Messaggio
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Logs)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LogDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.App.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
            </tr>
        }
    </tbody>
</table>